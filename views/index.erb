<div class="header">
  <div class="title">
    <h1>Block Miner</h1>
  </div>
</div>
<div class="container">
  <h2>Latest Blocks</h2>
  <% @blocks.each { |block| %>
    <%= block.transactions %>
  <% } %>
  <h2>Unverified Transactions</h2>
  <% unless @transactions.empty? %>
    <% @transactions.each { |transaction| %>
      <%= transaction.hash %>
    <% } %>
  <% end %>
</div>
